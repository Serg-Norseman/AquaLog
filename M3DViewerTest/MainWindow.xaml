<Window x:Class="M3DViewerTest.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:m3dtest="clr-namespace:M3DViewerTest"
        Title="M3DViewer" Height="600" Width="800" WindowStartupLocation="CenterScreen">

    <Grid Background="Black" MouseWheel="Grid_MouseWheel"
		MouseDown="Grid_MouseDown" MouseUp="Grid_MouseUp"
		MouseMove="Grid_MouseMove">

        <Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<Button x:Name="btnReset" Grid.Row="0" Content="Reset" Click="btnReset_Click" />

        <m3dtest:M3DViewer x:Name="fViewport" Grid.Row="1">
			<Viewport3D.Camera>
				<PerspectiveCamera x:Name="fCamera" FarPlaneDistance="100" NearPlaneDistance="0"
				    Position="0,0,5" LookDirection="0,0,-10" UpDirection="0,1,0" FieldOfView="45" />
			</Viewport3D.Camera>

			<ModelVisual3D x:Name="fModel">
				<ModelVisual3D.Content>
					<Model3DGroup x:Name="fGroup">
						<AmbientLight Color="Gray" />
						<DirectionalLight Color="White" Direction="-5,-5,-7" />
					</Model3DGroup>
				</ModelVisual3D.Content>
			</ModelVisual3D>
		</m3dtest:M3DViewer>
    </Grid>
</Window>

<Viewport3D x:Class="AquaMate.UI.Components.M3DViewerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AquaMate.UI.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Viewport3D.Camera>
        <PerspectiveCamera x:Name="fCamera" FarPlaneDistance="100" NearPlaneDistance="0"
				    Position="0,0,5" LookDirection="0,0,-10" UpDirection="0,1,0" FieldOfView="45" />
    </Viewport3D.Camera>

    <ModelVisual3D x:Name="fModel">
        <ModelVisual3D.Content>
            <Model3DGroup x:Name="fGroup">
                <AmbientLight Color="Gray" />
                <DirectionalLight Color="White" Direction="-5,-5,-7" />
            </Model3DGroup>
        </ModelVisual3D.Content>
    </ModelVisual3D>
</Viewport3D>

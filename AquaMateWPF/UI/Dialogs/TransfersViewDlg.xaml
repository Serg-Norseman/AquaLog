<base:EditDialog
    x:Class="AquaMate.UI.Dialogs.TransfersViewDlg"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="clr-namespace:AquaMate.UI.Dialogs"
    xmlns:components="clr-namespace:AquaMate.UI.Components"
    Title="TransfersViewDlg" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">

    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <components:ZListView x:Name="lvTransfers" Height="100" Width="200" Grid.Row="0" Margin="0,0,0,4" />

        <WrapPanel Grid.Row="1" HorizontalAlignment="Right">
            <Button Name="btnClose" Margin="0,0,0,0" MinHeight="24" MinWidth="96" IsCancel="True" />
        </WrapPanel>
    </Grid>
</base:EditDialog>
